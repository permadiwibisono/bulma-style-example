{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },   
  "extends": [
    "airbnb"
  ],    
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
    "jsx-a11y/anchor-is-valid": 1
  }
}